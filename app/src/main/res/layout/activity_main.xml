<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btnDisplayAllEmployee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="displayAllEmployee"
        android:text="Get All Employee" />

    <Button
        android:id="@+id/btnSearchEmployee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="searchEmployee"
        android:text="Search Employee" />

    <Button
        android:id="@+id/btnAddEmployee"
        android:layout_width="match_parent"
        android:onClick="addEmployee"
        android:layout_height="wrap_content"
        android:text="Add Employee" />

    <Button
        android:id="@+id/btnUpdateDeleteEmployee"
        android:layout_width="match_parent"
        android:onClick="updateDeleteEmployee"
        android:layout_height="wrap_content"
        android:text="Update/Delete Employee" />
</LinearLayout>